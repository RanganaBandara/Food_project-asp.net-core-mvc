@model List<Food_project.Models.Dish>
@{
	ViewData["Title"] = "Index";

}
<div class="Container">
	<div class="row">

		@foreach(var item in Model)
		{
			<div class="col-6">
				<div class="d-flex justify-content-center">
					<h1>@item.Name</h1>
					</div>
				<div class="d-flex justify-content-center">
					<img src="@item.ImageUrl" style="width:70%"/>

				</div>
				<div class="d-flex justify-content-center">
					@item.price.ToString("N2")Dollars
				</div>
			
				<div class="d-flex justify-content-center">
					<a class="btn btn-info" asp-action="DetailsView" asp-route-id="@item.Id">View Dish</a>
					</div>

			</div>
		}

		
	</div>
</div>